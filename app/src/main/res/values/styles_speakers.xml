<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Speakers.Item.Text" parent="MatchWrap">
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Speakers.Item.Text.Subtitle">
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Speakers.Text" parent="MatchWrap">
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Speakers.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Speaker.Button.Social" parent="Match">
        <item name="android:background">@drawable/item_selector_borderless</item>
        <item name="android:layout_margin">@dimen/base_margin</item>
        <item name="android:layout_width">@dimen/speaker_button_size</item>
        <item name="android:layout_height">@dimen/speaker_button_size</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>