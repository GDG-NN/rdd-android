<resources>

    <!-- Font family values -->
    <string name="family_regular">sans-serif</string>
    <string name="family_light">sans-serif-light</string>
    <string name="family_condensed">sans-serif-condensed</string>
    <string name="family_thin">sans-serif-thin</string>
    <string name="family_medium">sans-serif-medium</string>


    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--  Old  -->
    <style name="Widget.TagView" parent="@android:style/Widget.TextView">
        <item name="tagCornerRadius">6dp</item>
        <item name="tagPadding">4dp</item>
        <item name="tagUppercase">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">9sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
