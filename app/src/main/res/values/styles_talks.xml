<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Talk.Text" parent="MatchWrap">
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Talk.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Talk.Text.Tags">
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <style name="Talk.Text.Speakers">
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="Talk.Text.Speakers.Link">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>