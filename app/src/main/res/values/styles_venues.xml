<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Venues.Text" parent="MatchWrap">
        <item name="android:padding">@dimen/base_margin</item>
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Venues.Text.Title">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Venues.Text.Label">
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="Venues.Text.Label.Link">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/item_selector_borderless</item>
    </style>

</resources>
