<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="TimeSlot.Title" parent="MatchWrap">
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/text_dark_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/family_light</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TimeSlot.Speaker" parent="MatchWrap">
        <item name="android:textColor">@color/text_dark_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/family_regular</item>
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="TimeSlot.Layout" parent="MatchWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/base_margin</item>
    </style>

    <style name="TimeSlot.Card" parent="MatchWrap">
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
        <item name="android:layout_marginRight">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TimeSlot.Card.Small">
        <item name="android:layout_height">@dimen/schedule_card_height</item>
    </style>

    <style name="TimeSlot.Card.Big">
        <item name="android:layout_width">@dimen/schedule_big_card_width</item>
        <item name="android:layout_height">@dimen/schedule_big_card_height</item>
    </style>

    <style name="Schedule.Room" parent="Wrap">
        <item name="android:layout_width">@dimen/schedule_room_label_width</item>
        <item name="android:layout_height">@dimen/schedule_room_label_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/color_accent</item>
        <item name="android:padding">@dimen/base_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/family_condensed</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_light_primary</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>