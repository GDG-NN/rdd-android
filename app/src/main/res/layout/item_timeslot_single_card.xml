<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timeslot_time_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/schedule_time_height"
        android:layout_marginLeft="@dimen/base_margin"
        android:layout_marginRight="@dimen/base_margin"
        android:layout_marginTop="@dimen/base_margin"
        android:fontFamily="@string/family_regular"
        android:textColor="@color/text_dark_secondary"
        android:textSize="@dimen/text_size_headline"
        android:textStyle="normal"
        tools:text="15:00" />

    <android.support.v7.widget.CardView
        android:id="@+id/timeslot_all_rooms"
        style="@style/TimeSlot.Card.Big">


        <LinearLayout
            style="@style/TimeSlot.Layout"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/timeslot_all_rooms_speaker"
                style="@style/TimeSlot.Speaker"
                android:maxLines="3"
                tools:text="John doe" />

            <TextView
                android:id="@+id/timeslot_all_rooms_title"
                style="@style/TimeSlot.Title"
                android:visibility="gone"
                android:maxLines="5"
                tools:text="Some long title on talk even with some" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>