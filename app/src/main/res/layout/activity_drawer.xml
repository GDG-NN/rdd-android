<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer_layout"
    style="@style/Match"
    android:fitsSystemWindows="true">

    <LinearLayout
        style="@style/Match"
        android:orientation="vertical">

        <include layout="@layout/part_toolbar" />

        <FrameLayout
            android:id="@+id/activity_drawer_content_frame"
            style="@style/Match" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/activity_drawer_navigation_view"
        style="@style/WrapMatch"
        android:layout_gravity="start"
        android:background="#fff"
        app:headerLayout="@layout/part_drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>