<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Match"
    android:clipToPadding="false"
    android:padding="@dimen/speaker_content_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_speaker">

    <LinearLayout
        style="@style/Match"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speaker_title_company"
            style="@style/Speakers.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Code Writer\n at Generic company" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/speaker_button_blog"
                style="@style/Speaker.Button.Social"
                android:src="@drawable/vector_button_blog"
                tools:visibility="visible" />


            <ImageButton
                android:id="@+id/speaker_button_twitter"
                style="@style/Speaker.Button.Social"
                android:src="@drawable/vector_button_twitter"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/speaker_button_linkedin"
                style="@style/Speaker.Button.Social"
                android:src="@drawable/vector_button_linkedin"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/speaker_bio"
            style="@style/Speakers.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="some long text" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
